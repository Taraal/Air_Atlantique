        <TextBox Name="Nom" HorizontalAlignment="Left" Height="23" Margin="107,94,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Prenom" HorizontalAlignment="Left" Height="23" Margin="462,94,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
